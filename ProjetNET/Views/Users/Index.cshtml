@model IEnumerable<ProjetNET.Models.User>

@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html> 
    <head>
    <script src="Scripts/jquery-1.11.0.min.js"></script>
    <ajaxToolkit:ToolkitScriptManager runat="server" />
    <link rel='stylesheet' href='https://cdn-uicons.flaticon.com/uicons-regular-rounded/css/uicons-regular-rounded.css'>

</head>
    <body>
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <div class="table-responsive">


        <table class="table table-striped ">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PhotoUrl)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                  
                    
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="@Html.DisplayFor(modelItem => item.PhotoUrl)" class="" alt="" />

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                      
                        
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            <a asp-action="Edit" class="" asp-route-id="@item.Id"><i class="fi fi-rr-edit"></i> </a> |
                            <a asp-action="Details" class="link-warning" asp-route-id="@item.Id"><i class="fi fi-tr-file-circle-info"></i><i class="fi fi-rr-square-info"></i></a> |
                            <a asp-action="Delete" class="link-danger" asp-route-id="@item.Id"><i class="fi fi-rr-delete-user"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
   
    </body>

</html>

